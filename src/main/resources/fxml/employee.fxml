<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <VBox prefHeight="400.0" prefWidth="600.0" style="-fx-spacing: 20;" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="100.0">
      <TextField fx:id="tf_employeeNumber" layoutX="10.0" layoutY="10.0" promptText="Employee Number">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
        <TextField fx:id="tf_firstname" promptText="First Name">
         <font>
            <Font size="18.0" />
         </font></TextField>
        <TextField fx:id="tf_lastname" promptText="Last Name">
         <font>
            <Font size="18.0" />
         </font></TextField>
      <ComboBox fx:id="cb_gender" prefWidth="100.0" promptText="Gender" />
        <AnchorPane prefHeight="200.0" prefWidth="500.0">
            <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-alignment: center; -fx-spacing: 20;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
                <Button fx:id="btn_add_employee" minHeight="35.0" minWidth="80.0" mnemonicParsing="false" style="-fx-cursor: hand;" text="Add Employee">
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </Button>
                <Button fx:id="btn_update_employee" minHeight="35.0" minWidth="80.0" mnemonicParsing="false" style="-fx-cursor: hand;" text="Update Employee">
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </Button>
                <Button fx:id="btn_delete_employee" minHeight="35.0" minWidth="80.0" mnemonicParsing="false" style="-fx-cursor: hand;" text="Delete Employee">
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </Button>
                <Button fx:id="btn_cancel" minHeight="35.0" minWidth="80.0" mnemonicParsing="false" style="-fx-cursor: hand;" text="Cancel">
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </Button>
            </HBox>
            <TableView fx:id="tbl_employees" prefHeight="200.0" prefWidth="600.0" AnchorPane.topAnchor="150.0">
                <columns>
                    <TableColumn prefWidth="139.0" text="Employee Number" />
                    <TableColumn prefWidth="194.0" text="First Name" />
                    <TableColumn prefWidth="188.0" text="Last Name" />
                    <TableColumn prefWidth="78.0" text="Gender" />
                </columns>
            </TableView>
        </AnchorPane>
    </VBox>
</AnchorPane>
